{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Easy Presenter V1.2.3",
  "version": "1.2.3",
  "identifier": "com.easypresenter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Easy Presenter",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
    "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost http://asset.localhost data: blob:; media-src 'self' asset: https://asset.localhost http://asset.localhost data: blob:; connect-src 'self' asset: https://asset.localhost http://asset.localhost; object-src 'self' asset: https://asset.localhost http://asset.localhost; frame-src 'self' asset: https://asset.localhost http://asset.localhost;",
    "assetProtocol": {
    "enable": true,
    "scope": ["**"]
  }
}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
    "cantos.db",
    "biblias.db",
    "multimedia.db",
    "pdfium.dll",
    "libpdfium.so"
  ],
  "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-common",
          "gstreamer1.0-plugins-good",
          "gstreamer1.0-plugins-bad",
          "gstreamer1.0-plugins-ugly",
          "gstreamer1.0-libav"
        ]
      }
    }
  }
}